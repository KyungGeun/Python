# 024
string = "PYTHON"
print(string[::-1]) # 출력: NOHTYP

# 025
phone_number = '010-1111-2222'
print(phone_number.replace('-',' ')) # 출력: 010 1111 2222

# 026
phone_number = '010-1111-2222'
print(phone_number.replace('-','')) # 출력: 01011112222

# 027
url = 'http://sharebook.kr'
print(url.split('.')[-1]) # 출력: kr

